<!DOCTYPE html>
<html>
  <head>
    <title>MyCms</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main id="main">
      <header id="header">
        <h1>My CMS</h1>

      </header>
      <nav id="navigation">
        <ul>
          <li><%= link_to "Subjects", subjects_path %></li>
          <li><%= link_to "Sections", sections_path %></li>
        </ul>
      </nav>
      <div id="content">
        <%= yield %>
      </div>
      <footer id="footer">
        <p>Simple CMS</p>
      </footer>
    </main>
  </body>
</html>
