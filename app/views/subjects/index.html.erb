<% if !flash[:notice].blank?  %>
<div class="notice">
  <%= flash[:notice] %>
</div>
<% end %>

<div class="subjects index">
  <h2>Subjects</h2>

  <%= link_to("Add New Subject", new_subject_path, class: 'action new') %>

  <table class="listing" summary="Subject list">
    <tr class="header">
      <th>#</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Actions</th>
    </tr>

    <% @subjects.each do |s| %>
    <tr>
      <td><%= s.position %></td>
      <td><%= s.name %></td>
      <td class="center"><%= s.visible ? 'Yes' : 'No' %></td>
      <td class="actions">
        <%= link_to('Show', "subjects/#{s.id}", class: 'action show') %>
        <%= link_to('Edit', {controller: 'subjects', action: 'edit', id: s.id}, class: 'action show') %>
        <%= link_to('Delete', delete_subject_path(s), class: 'action show') %>
      </td>
    </tr>
    <% end %>
  </table>

</div>
